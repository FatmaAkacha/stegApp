{% extends 'base.html.twig' %}

{% block title %}Etat d'intervention{% endblock %}

{% block body %}
<div class="container">
    <h1>Etat Intervention </h1>
    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for intervention in interventions %}
                <tr>
                    <td>{{ intervention.date|date('Y-m-d H:i:s') }}</td>
                    <td><a class="btn btn-primary "href="{{ path('app_etat_intervention_details', {'id': intervention.id}) }}">Voir details</a></td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
