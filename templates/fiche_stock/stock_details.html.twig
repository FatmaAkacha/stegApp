{% extends 'base.html.twig' %}

{% block title %}Fiche Stock Details{% endblock %}

{% block body %}
        <button onclick="printDiv('print-area')">Print this page</button>
        <div id="print-area">
        <h1> Details</h1>
        <p>Date: {{ ficheStock.date|date('Y-m-d') }}</p>
        <p>Quantité Entrée: {{ ficheStock.quantite_entree }}</p>
        <p>Num Bon Entrée: {{ ficheStock.num_bon_entree }}</p>
        <p>Quantité Sortie: {{ ficheStock.quantite_sortie }}</p>
        <p>Machine Sortie: {{ ficheStock.machine_sortie }}</p>
        <p>Solde: {{ ficheStock.solde }}</p>
    </div>
{% endblock %}
{% block javascripts %}
    <script>
        function printDiv(divName) {
            var printContents = document.getElementById(divName).innerHTML;
            var originalContents = document.body.innerHTML;
            document.body.innerHTML = printContents;
            window.print();
            document.body.innerHTML = originalContents;
        }
    </script>
{% endblock %}