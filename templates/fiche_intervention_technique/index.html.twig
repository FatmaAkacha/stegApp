{% extends 'base.html.twig' %}

{% block title %}Fiche d'intervention technique{% endblock %}

{% block body %}
    <h1>Fiche Intervention technique </h1>
    <table border="1">
        <thead>
            <tr>
                <th>Code Erreur</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for ficheInterventionTech in fichesInterventionTech %}
                <tr>
                    <td>{{ ficheInterventionTech.code_erreur }}</td>
                    <td>
                            <a href="{{ path('app_fiche_intervention_tech_details', {'id': ficheInterventionTech.id}) }}" class="btn btn-primary">View Details</a>
                        </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
